@model GiftOfTheGiversApp.Models.DisasterReport

@{
    ViewData["Title"] = "Create";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h2>Create Disaster Report</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" asp-controller="DisasterReports" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- User Selection -->
                        <div class="mb-3">
                            <label asp-for="UserId" class="form-label"></label>
                            <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId">
                                <option value="">-- Select User --</option>
                            </select>
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div>

                        <!-- Location -->
                        <div class="mb-3">
                            <label asp-for="Location" class="form-label"></label>
                            <input asp-for="Location" class="form-control" placeholder="Enter location" />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>

                        <!-- Description -->
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <input asp-for="Description" class="form-control" placeholder="Enter description" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Report Date -->
                        <div class="mb-3">
                            <label asp-for="ReportDate" class="form-label"></label>
                            <input asp-for="ReportDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="ReportDate" class="text-danger"></span>
                        </div>

                        <!-- Status -->
                        <div class="mb-3">
                            <label asp-for="Status" class="form-label"></label>
                            <select asp-for="Status" class="form-control">
                                <option value="New">New</option>
                                <option value="InProgress">In Progress</option>
                                <option value="Resolved">Resolved</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <!-- Severity -->
                        <div class="mb-3">
                            <label asp-for="Severity" class="form-label"></label>
                            <select asp-for="Severity" class="form-control">
                                <option value="Low">Low</option>
                                <option value="Medium">Medium</option>
                                <option value="High">High</option>
                            </select>
                            <span asp-validation-for="Severity" class="text-danger"></span>
                        </div>

                        <!-- Submit -->
                        <div class="d-grid">
                            <input type="submit" value="Create" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>

                <div class="card-footer text-center dashboard-footer">
                    <small>
                        Dashboard?
                        <a asp-action="Dashboard" asp-controller="Home" class="dashboard-link">
                            Go Back! <i class="bi bi-arrow-right"></i>
                        </a>
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>



<style>
    body {
        background-color: #f0f2f7; /* soft, light background */
    }

    .card {
        border-radius: 12px;
        background-color: #ffffff; /* clean white card */
        box-shadow: 0 8px 20px rgba(0,0,0,0.08);
    }

    .card-header {
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
        background: linear-gradient(135deg, #ff6b6b, #ff4757); /* pink-red gradient */
        color: #ffffff;
        font-weight: 600;
        text-align: center;
    }

    .btn-primary {
        background: linear-gradient(135deg, #6a11cb, #2575fc); /* purple-blue gradient */
        border: none;
        color: #ffffff;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #2575fc, #6a11cb);
            transform: scale(1.05);
        }

    input[readonly] {
        background-color: #e0e0e0;
    }

    .form-control:focus {
        border-color: #6a11cb;
        box-shadow: 0 0 0 0.2rem rgba(106,17,203,0.25);
    }

    .dashboard-footer {
        background-color: #f8f9fa;
        padding: 15px 0;
        border-top: 1px solid #dee2e6;
        border-bottom-left-radius: 12px;
        border-bottom-right-radius: 12px;
    }

        .dashboard-footer small {
            font-size: 0.9rem;
            color: #495057;
        }

        .dashboard-footer .dashboard-link {
            color: #6a11cb;
            text-decoration: none;
            font-weight: 500;
            margin-left: 5px;
        }

            .dashboard-footer .dashboard-link:hover {
                color: #2575fc;
                text-decoration: underline;
            }

        .dashboard-footer .bi-arrow-right {
            vertical-align: baseline;
            margin-left: 3px;
        }
</style>
