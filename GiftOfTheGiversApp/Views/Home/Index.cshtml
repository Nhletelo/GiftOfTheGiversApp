@model GiftOfTheGiversApp.Models.HomeViewModel
@{
    ViewData["Title"] = "Home";
}

<div class="container-fluid p-0">

    <!-- Hero Section -->
    <div class="hero-section d-flex flex-column justify-content-center align-items-center text-center text-white">
        <h1 class="display-4 fw-bold mb-3">Gift of the Givers</h1>
        <p class="lead mb-4">Together, we transform lives during disasters and crises.</p>
        <a asp-controller="Users" asp-action="Create" class="btn btn-light btn-lg">Get Started</a>
    </div>

    <!-- Features Section -->
    <div class="container py-5">
        <div class="row text-center g-4">
            <!-- Feature 1: Report Incidents -->
            <div class="col-md-4 feature animate-on-scroll">
                <div class="feature-card p-5 rounded shadow-sm h-100 bg-gradient-red">
                    <i class="bi bi-exclamation-circle-fill display-4 mb-3"></i>
                    <h5 class="fw-bold">Report Incidents</h5>
                    <p>Alert us to emergencies in your community to ensure rapid response and support.</p>
                </div>
            </div>

            <!-- Feature 2: Donate Resources -->
            <div class="col-md-4 feature animate-on-scroll">
                <div class="feature-card p-5 rounded shadow-sm h-100 bg-gradient-green">
                    <i class="bi bi-gift-fill display-4 mb-3"></i>
                    <h5 class="fw-bold">Donate Resources</h5>
                    <p>Provide essentials like food, clothing, or medical aid to people in need.</p>
                </div>
            </div>

            <!-- Feature 3: Volunteer Today -->
            <div class="col-md-4 feature animate-on-scroll">
                <div class="feature-card p-5 rounded shadow-sm h-100 bg-gradient-blue">
                    <i class="bi bi-people-fill display-4 mb-3"></i>
                    <h5 class="fw-bold">Volunteer Today</h5>
                    <p>Join our team on the ground and make a meaningful impact in relief operations.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="bg-light text-center py-5">
        <h3 class="fw-bold text-primary mb-3">Be Part of the Change</h3>
        <p class="text-muted mb-4">Every action matters. Join us and help transform lives!</p>
        <a asp-controller="Users" asp-action="Login" class="btn btn-primary btn-lg">Login to Contribute</a>
    </div>

</div>

<style>
    /* Body & Hero */
    body {
        background-color: #f4f8fb;
        font-family: 'Poppins', sans-serif;
    }

    .hero-section {
        height: 70vh;
        background: linear-gradient(135deg, #007bff, #00c6ff);
        padding: 60px 20px;
        position: relative;
    }

        .hero-section h1 {
            font-size: 3rem;
        }

        .hero-section p {
            font-size: 1.2rem;
        }

    /* Feature Cards */
    .feature-card {
        transition: transform 0.4s ease, box-shadow 0.4s ease;
        color: white;
    }

        .feature-card:hover {
            transform: translateY(-15px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.2);
        }

        .feature-card i {
            font-size: 3rem;
            transition: transform 0.4s ease;
        }

        .feature-card:hover i {
            transform: scale(1.2) rotate(10deg);
        }

    /* Gradient Colors */
    .bg-gradient-red {
        background: linear-gradient(135deg, #ff416c, #ff4b2b);
    }

    .bg-gradient-green {
        background: linear-gradient(135deg, #56ab2f, #a8e063);
    }

    .bg-gradient-blue {
        background: linear-gradient(135deg, #2193b0, #6dd5ed);
    }

    /* Scroll Animations */
    .animate-on-scroll {
        opacity: 0;
        transform: translateY(50px);
        transition: all 0.8s ease-out;
    }

        .animate-on-scroll.visible {
            opacity: 1;
            transform: translateY(0);
        }

    /* Call to Action */
    .btn-primary {
        background: linear-gradient(135deg, #007bff, #00c6ff);
        border: none;
        font-weight: 600;
        border-radius: 50px;
        padding: 12px 35px;
        transition: transform 0.3s ease, background 0.3s ease;
    }

        .btn-primary:hover {
            transform: scale(1.05);
            background: linear-gradient(135deg, #0056b3, #008cff);
        }
</style>

<script>
    // Scroll animation
    const features = document.querySelectorAll('.animate-on-scroll');
    const observer = new IntersectionObserver(entries => {
        entries.forEach(entry => {
            if(entry.isIntersecting) entry.target.classList.add('visible');
        });
    }, { threshold: 0.2 });
    features.forEach(feature => observer.observe(feature));
</script>
