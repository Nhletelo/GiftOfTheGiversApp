@{
    ViewData["Title"] = "Dashboard";
}

<div class="dashboard-container">

    <!-- Success Message Alert -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert" style="max-width:600px; margin:0 auto 30px auto; border-radius:15px; padding:15px; font-weight:500;">
            <i class="bi bi-check-circle-fill"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <h1 class="dashboard-title">🌍 Welcome to Your Dashboard</h1>
    <p class="dashboard-subtitle">Take action, make a difference — one click at a time.</p>

    <div class="row justify-content-center mt-5">
        <div class="col-md-4 mb-4">
            <div class="dashboard-card text-center">
                <div class="card-icon bg-gradient-red mb-3">
                    <i class="bi bi-exclamation-triangle"></i>
                </div>
                <h4 class="mb-3">Report Disaster</h4>
                <p class="mb-4">Alert us about disasters in your area for quick assistance.</p>
                <a class="btn btn-action" asp-controller="DisasterReports" asp-action="Create">Report Now</a>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="dashboard-card text-center">
                <div class="card-icon bg-gradient-green mb-3">
                    <i class="bi bi-heart-fill"></i>
                </div>
                <h4 class="mb-3">Make a Donation</h4>
                <p class="mb-4">Provide food, clothing, or medical aid to those who need it most.</p>
                <a class="btn btn-action" asp-controller="Donations" asp-action="Create">Donate Now</a>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="dashboard-card text-center">
                <div class="card-icon bg-gradient-blue mb-3">
                    <i class="bi bi-people-fill"></i>
                </div>
                <h4 class="mb-3">Manage Profile</h4>
                <p class="mb-4">Update your profile information or change your password.</p>
                <a class="btn btn-action" asp-controller="Users" asp-action="EditProfile">Profile</a>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #e0f7fa, #e8f5e9, #fff3e0);
        font-family: 'Poppins', sans-serif;
    }

    .dashboard-container {
        text-align: center;
        padding: 60px 20px;
    }

    .dashboard-title {
        font-size: 2.8rem;
        font-weight: 700;
        color: #2b2d42;
    }

    .dashboard-subtitle {
        font-size: 1.2rem;
        color: #555;
        margin-top: 10px;
    }

    .dashboard-card {
        background: rgba(255, 255, 255, 0.9);
        border-radius: 20px;
        padding: 40px 25px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(10px);
        transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

        .dashboard-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        }

    .card-icon {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        color: white;
        font-size: 2rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .bg-gradient-red {
        background: linear-gradient(45deg, #ff416c, #ff4b2b);
    }

    .bg-gradient-green {
        background: linear-gradient(45deg, #56ab2f, #a8e063);
    }

    .bg-gradient-blue {
        background: linear-gradient(45deg, #2193b0, #6dd5ed);
    }

    .btn-action {
        background: linear-gradient(45deg, #007bff, #00c6ff);
        border: none;
        color: white;
        font-weight: 600;
        border-radius: 50px;
        padding: 10px 30px;
        transition: background 0.3s ease, transform 0.2s ease;
    }

        .btn-action:hover {
            background: linear-gradient(45deg, #0056b3, #008cff);
            transform: scale(1.05);
        }

    .dashboard-card {
        padding: 30px 20px;
    }

    .dashboard-title {
        font-size: 2rem;
    }
</style>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
