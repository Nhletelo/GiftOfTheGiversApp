@model GiftOfTheGiversApp.Models.Donation

@{
    ViewData["Title"] = "Create";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h2>Create Donation</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="UserId" class="form-label"></label>
                            <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DonationType" class="form-label"></label>
                            <select asp-for="DonationType" class="form-select">
                                <option value="">-- Select Donation Type --</option>
                                <option value="Food">Food</option>
                                <option value="Clothing">Clothing</option>
                                <option value="Medical">Medical</option>
                            </select>
                            <span asp-validation-for="DonationType" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Quantity" class="form-label"></label>
                            <input asp-for="Quantity" class="form-control" placeholder="Enter quantity" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DonationDate" class="form-label"></label>
                            <input asp-for="DonationDate" class="form-control" type="date" />
                            <span asp-validation-for="DonationDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" class="form-label"></label>
                            <select asp-for="Status" class="form-select">
                                <option value="">-- Select Status --</option>
                                <option value="Pending">Pending</option>
                                <option value="Delivered">Delivered</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DistributionNotes" class="form-label"></label>
                            <input asp-for="DistributionNotes" class="form-control" placeholder="Enter notes" />
                            <span asp-validation-for="DistributionNotes" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <input type="submit" value="Create" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>

                <div class="card-footer text-center dashboard-footer">
                    <small>
                        Dashboard?
                        <a asp-action="Dashboard" asp-controller="Home" class="dashboard-link">
                            Go Back! <i class="bi bi-arrow-right"></i>
                        </a>
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background-color: #eef2f7; /* soft, calming background */
    }

    .card {
        border-radius: 12px;
        background-color: #ffffff;
        box-shadow: 0 8px 20px rgba(0,0,0,0.08);
    }

    .card-header {
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
        background: linear-gradient(135deg, #ff6b6b, #ff4757); /* warm gradient */
        color: #ffffff;
        font-weight: 600;
        text-align: center;
    }

    .btn-primary {
        background: linear-gradient(135deg, #6a11cb, #2575fc); /* purple-blue gradient */
        border: none;
        color: #ffffff;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #2575fc, #6a11cb);
            transform: scale(1.05);
        }

    .form-control:focus {
        border-color: #6a11cb;
        box-shadow: 0 0 0 0.2rem rgba(106,17,203,0.25);
    }

    .dashboard-footer {
        background-color: #f8f9fa;
        padding: 15px 0;
        border-top: 1px solid #dee2e6;
        border-bottom-left-radius: 12px;
        border-bottom-right-radius: 12px;
    }

        .dashboard-footer small {
            font-size: 0.9rem;
            color: #495057;
        }

        .dashboard-footer .dashboard-link {
            color: #6a11cb;
            text-decoration: none;
            font-weight: 500;
            margin-left: 5px;
        }

            .dashboard-footer .dashboard-link:hover {
                color: #2575fc;
                text-decoration: underline;
            }

        .dashboard-footer .bi-arrow-right {
            vertical-align: baseline;
            margin-left: 3px;
        }
</style>
